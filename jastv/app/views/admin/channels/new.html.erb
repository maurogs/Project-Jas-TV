<div class="pure-form pure-form-aligned">
	
<h1>New Channel</h1>


<%= form_for [:admin, @channel] do |f| %>


	<%= f.label :name %>
	<%= f.text_field :name %>


	<%= f.label :picture %>
	<%= f.text_field :picture %>

	<br>


	<%= f.submit 'Save' %>

 	<div class="pure-button">  
	<%= link_to 'Cancel',  admin_channels_path %>
	</div>

<% end %>


</div>
